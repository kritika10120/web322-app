<!DOCTYPE html>
<html>
<head>
     <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
        integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">
    <title>Categories</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            margin: 20px;
            padding: 0;
        }
        
        h1 {
            margin-bottom: 20px;
        }
        
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        
        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ccc;
        }
        
        th {
            background-color: #f2f2f2;
        }
        
        .remove-button {
            background-color: #f44336;
            color: #fff;
            border: none;
            padding: 8px 16px;
            text-decoration: none;
            border-radius: 4px;
            cursor: pointer;
        }
        
        .remove-button:hover {
            background-color: #d32f2f;
        }
    </style>
</head>
<body>
    <h1>Categories</h1>
    <table>
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
            <th>Remove</th>
        </tr>
        {{#each categories}}
        <tr data-post-id="{{id}}">
            <td>{{id}}</td>
            <td>{{name}}</td>
            <td>
                <button class="remove-button" onclick="removePost('{{id}}')">Remove</button>
            </td>
        </tr>
        {{/each}}
    </table>

    <script>
        // JavaScript function to handle the click event of the "Remove" button
        function removePost(postId) {
            const rowToRemove = document.querySelector(`[data-post-id="${postId}"]`);
            if (rowToRemove) {
                rowToRemove.remove();
                console.log(`Removing category with ID ${postId}`);
            }
        }
    </script>
</body>
</html>
