<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
        integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">
    <title>Categories</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            margin: 20px;
            padding: 0;
        }
        
        h1 {
            margin-bottom: 20px;
        }
        
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        
        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ccc;
        }
        
        th {
            background-color: #f2f2f2;
        }
        
        .remove-button {
            background-color: #f44336;
            color: #fff;
            border: none;
            padding: 8px 16px;
            text-decoration: none;
            border-radius: 4px;
            cursor: pointer;
        }
        
        .remove-button:hover {
            background-color: #d32f2f;
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-default sticky-top">
        <div class="container-fluid">
           
            <div class="navbar-header">
                <!-- Navigation menu toggle button for small screens -->
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                    data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- Brand/logo of the website -->
                <span class="navbar-brand" href="#">WEB322 - Kritika Kritika</span>
            </div>

            <!-- Navigation menu items -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="active" ><a href="/blog">Blog</a></li>
                    <li><a href="/about">About</a></li>
                </ul>

                <!-- User registration and login buttons -->
                <form class="navbar-form navbar-right">
                    <a href="/register" class="btn btn-success"><span class="glyphicon glyphicon-cog"></span>&nbsp;&nbsp;Register</a>
                    <a href="/login" class="btn btn-primary"><span class="glyphicon glyphicon-chevron-right"></span>&nbsp;&nbsp;Log In</a>
                </form>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    <div class="container-fluid" style="margin-top: 70px;"> <!-- Add top margin to create spacing -->
        <h1>Categories</h1>
        <table>
            <tr>
                <th>Category ID</th>
                <th>Category Name</th>
                <th>Remove</th>
            </tr>
            {{#each categories}}
            <tr data-post-id="{{id}}">
                <td>{{id}}</td>
                <td>{{name}}</td>
                <td>
                    <button class="remove-button" onclick="removePost('{{id}}')">Remove</button>
                </td>
            </tr>
            {{/each}}
        </table>
    </div>

    <script>
        // JavaScript function to handle the click event of the "Remove" button
        function removePost(postId) {
            const rowToRemove = document.querySelector(`[data-post-id="${postId}"]`);
            if (rowToRemove) {
                rowToRemove.remove();
                console.log(`Removing category with ID ${postId}`);
            }
        }
    </script>
</body>
</html>
