<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!-- Latest compiled and minified Bootstrap 3.4.1 CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
        integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">
        <title>WEB322 Kritika Kritika Blog</title>
        
</head>
<style>
    body {
        background-color: #f2f2f2;
        font-family: Arial, sans-serif;
    }
    
    .navbar {
        background-color: #2ecc71;
        border: none;
        border-radius: 0;
        margin-bottom: 0;
    }
    
    .navbar-default .navbar-brand {
        color: white;
        font-weight: bold;
    }
    
    .navbar-default .navbar-nav>li>a {
        color: white;
    }
    
    .navbar-default .navbar-nav>li>a:hover,
    .navbar-default .navbar-nav>li>a:focus {
        background-color: #27ae60;
    }
    
    .dropdown-menu>li>a {
        color: #333;
    }
    
    .dropdown-menu>li>a:hover {
        background-color: #f2f2f2;
    }
    
    h1 {
        margin-top: 60px;
    }
    
    .button {
        display: block;
        margin-top: 20px;
        margin-right: 20px;
        float: right;
        background-color: #2ecc71;
        color: white;
        padding: 10px 20px;
        border-radius: 4px;
        text-decoration: none;
    }
    
    .button:hover {
        background-color: #27ae60;
    }
    
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }
    
    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }
    
    .remove-button {
        background-color: #e74c3c;
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 4px;
        cursor: pointer;
    }
    
    .remove-button:hover {
        background-color: #c0392b;
    }
</style>

<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                    data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span class="navbar-brand" href="#">WEB322 - Kritika Kritika</span>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="/blog">Blog</a></li>
                    <li><a href="/about">About</a></li>
                </ul>

                    <form class="navbar-form navbar-right">
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" id="userMenu" data-toggle="dropdown">
                                <span class="glyphicon glyphicon-user"></span>&nbsp;&nbsp;Kritika001&nbsp;&nbsp;<span
                                    class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="userMenu">
                                <li><a href="/userHistory">User History</a></li>
                                <li><a href="/logout">Log Out</a></li>
                            </ul>
                        </div>
                    </form>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="active" ><a href="/posts">Posts</a></li>
                        <li><a href="/categories">Categories</a></li>
                    </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <div class="container">
        <h1>Posts</h1>
        <a class="button" href="/add-Post">Add Post</a> <!-- set the button to the top right corner -->
        <table>
            <thead>
                <tr>
                    <th>Post ID</th>
                    <th>Title</th>
                    <th>Post Date</th>
                    <th>Category</th>
                    <th>Published</th>
                    <th>Remove</th>
                </tr>
            </thead>
            <tbody>
    {{#each postsData}}
        <tr data-post-id="{{id}}">
            <td>{{id}}</td>
            <td>{{title}}</td>
            <td>{{postDate}}</td>
            <td>
                {{#if selectedCategory}}
                    {{selectedCategory.name}}
                {{else}}
                    No Category
                {{/if}}
            </td>
            <td>{{published}}</td>
            <td>
                <button class="remove-button" onclick="removePost('{{id}}')">Remove</button>
            </td>
        </tr>
    {{/each}}
</tbody>
        </table>
    </div>     
    <script>
        // JavaScript function to handle the click event of the "Remove" button (unchanged)
        function removePost(postId) {
            const rowToRemove = document.querySelector(`[data-post-id="${postId}"]`);
            if (rowToRemove) {
                rowToRemove.remove();
            }
        }
    </script>      
</body>
</html>
