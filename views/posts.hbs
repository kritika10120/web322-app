<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Posts</title>

    <style>
        /* Body background color and font color */
        body {
            background-color: #F0F5E9;
            color: #333;
            font-family: Arial, sans-serif;
        }

        /* Container styles */
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ccc;
            background-color: #fff;
            position: relative; /* Set the container as a relative positioned element */
        }

        /* Heading styles */
        h1 {
            color: #4CAF50;
            margin-bottom: 20px;
        }

        /* Button styles */
        .button {
            display: inline-block;
            background-color: #4CAF50;
            color: #fff;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            position: absolute; /* Set the button as an absolute positioned element */
            top: 10px; /* Distance from the top */
            right: 10px; /* Distance from the right */
        }

        /* Table styles */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #4CAF50;
            color: #fff;
        }

        tr:hover {
            background-color: #f2f2f2;
       .remove-button {
            display: inline-block;
            background-color: red;
            color: #fff;
            padding: 5px 10px;
            border-radius: 3px;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Posts</h1>
        <a class="button" href="/addPost">Add Post</a> <!-- set the button to the top right corner -->

        <table>
            <thead>
                <tr>
                    <th>Post ID</th>
                    <th>Title</th>
                    <th>Post Date</th>
                    <th>Category</th>
                    <th>Published</th>
                    <th>Remove</th>
                </tr>
            </thead>
            <tbody>
    {{#each postsData}}
        <tr data-post-id="{{id}}">
            <td>{{id}}</td>
            <td>{{title}}</td>
            <td>{{postDate}}</td>
            <td>
                {{#if selectedCategory}}
                    {{selectedCategory.name}}
                {{else}}
                    No Category
                {{/if}}
            </td>
            <td>{{published}}</td>
            <td>
                <button class="remove-button" onclick="removePost('{{id}}')">Remove</button>
            </td>
        </tr>
    {{/each}}
</tbody>
        </table>
    </div>

    <script>
        // JavaScript function to handle the click event of the "Remove" button
        function removePost(postId) {
           
            const rowToRemove = document.querySelector(`[data-post-id="${postId}"]`);
            if (rowToRemove) {
                rowToRemove.remove();
            }
        }
    </script>
</body>
</html>
